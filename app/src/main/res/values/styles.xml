<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
    Base application theme, dependent on API level. This theme is replaced
    by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/bgcolor</item>
        <item name="colorPrimaryDark">@color/dialog_brown</item>
        <item name="actionBarStyle">@style/BrownActionBar</item>
        <item name="android:textColor">@color/bar_brown</item>
    </style>

    <!-- SUNIT activity theme. -->
    <style name="DroidCavationSUnitTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.DroidCavation.SU</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.DroidCavation.SU" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/bar_brown</item>

        <item name="displayOptions">useLogo|showTitle|showHome</item>

        <item name="logo">@drawable/su</item>

    </style>

    <!-- Style for forecast listview -->
    <style name="DroidCavationListStyle">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>


    <style name="BrownActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/bar_brown</item>
        <!--
        <item name="displayOptions">useLogo|showTitle|showHome</item>
        <item name="logo">@drawable/ic_launcher</item>
        -->
    </style>


    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/dialog_brown</item>

        <!-- Support library compatibility -->
        <item name="background">@color/dialog_brown</item>
        <item name="displayOptions">useLogo|showTitle|showHome</item>
        <item name="logo">@drawable/ic_launcher</item>
    </style>

</resources>